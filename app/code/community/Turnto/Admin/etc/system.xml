<?xml version="1.0"?>
<!--
/**
 * @package     Turnto_Admin
  */
-->
<config>
   <tabs>
        <turnto_extensions translate="label" >
            <label>TurnTo</label>
            <sort_order>260</sort_order>
        </turnto_extensions>
    </tabs>
    
    <sections>
        <turnto_admin translate="label" >
            <label>Configuration</label>
            <tab>turnto_extensions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>261</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <site_key translate="label">
                            <label>Site Key*</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </site_key>
                        <site_auth translate="label">
                            <label>Authorization Key*</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </site_auth>
                        <static_url>
                            <label>Static URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <comment>Default is http://static.www.turnto.com. Should not ever be changed, unless instructed by TurnTo.</comment>
                        </static_url>
                        <url>
                            <label>URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <comment>Default is http://www.turnto.com. Should not ever be changed, unless instructed by TurnTo.</comment>
                        </url>
                        <!-- UPC -->
                        <upc_attribute>
                            <label>UPC Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Turnto_Admin_Block_Adminhtml_System_Config_Attributes</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upc_attribute>
                        <!-- MPN -->
                        <mpn_attribute>
                            <label>MPN Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Turnto_Admin_Block_Adminhtml_System_Config_Attributes</source_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mpn_attribute>
                        <!-- ISBN -->
                        <isbn_attribute>
                            <label>ISBN Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Turnto_Admin_Block_Adminhtml_System_Config_Attributes</source_model>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </isbn_attribute>
                        <!--  EAN -->
                        <ean_attribute>
                            <label>EAN Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Turnto_Admin_Block_Adminhtml_System_Config_Attributes</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ean_attribute>
                        <!-- JAN -->
                        <jan_attribute>
                            <label>JAN Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Turnto_Admin_Block_Adminhtml_System_Config_Attributes</source_model>
                            <sort_order>160</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jan_attribute>
                        <!-- ASIN -->
                        <asin_attribute>
                            <label>ASIN Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Turnto_Admin_Block_Adminhtml_System_Config_Attributes</source_model>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </asin_attribute>
                        <!-- BRAND -->
                        <brand_attribute>
                            <label>Brand Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Turnto_Admin_Block_Adminhtml_System_Config_AttributesAll</source_model>
                            <sort_order>180</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brand_attribute>
                    </fields>
                </general>
                <feedconfig translate="label" >
                    <label>TurnTo SKU-average-rating Feed Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <feed_activation>
                            <frontend_model>adminblock1/adminhtml_system_config_feed</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </feed_activation>
                        <url translate="label">
                            <label>Products Ratings Feed url*</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </url>
                    </fields>
                 </feedconfig>
                <historicalfeedconfig>
                    <label>TurnTo Historical Orders Feed Push</label>
                    <tab>turnto_extensions</tab>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled Historical Orders Feed Push</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>When set to Yes, Turnto historical orders feed will be pushed to TurnTo nightly.</comment>
                        </enabled>
                        <storeId>
                            <label>Store ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storeId>
                        <websiteId>
                            <label>Website ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </websiteId>
                    </fields>
                </historicalfeedconfig>
                <catalogfeedconfig>
                    <label>TurnTo Catalog Feed Push</label>
                    <tab>turnto_extensions</tab>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled Catalog Feed Feed Push</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>When set to Yes, a TurnTo catalog feed will be pushed to TurnTo nightly.</comment>
                        </enabled>
                        <storeId>
                            <label>Store ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storeId>
                        <websiteId>
                            <label>Website ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </websiteId>
                    </fields>
                </catalogfeedconfig>
            </groups>
        </turnto_admin>
    </sections>
</config>
